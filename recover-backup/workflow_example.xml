<?xml version="1.0" encoding="UTF-8"?>
<definition xmlns="http://workflow.opencastproject.org">

  <!-- This workflow can be used to recover a mediapackage and can be customized to suit your needs. !-->

  <id>recover-mp</id>
  <title>Recover a mediapackage from backup</title>
  <tags/>
  <description/>

  <configuration_panel></configuration_panel>

  <operations>

    <!-- Apply series data to the mediapackage -->
    <operation
      id="series"
      exception-handler-workflow="partial-error"
      description="Applying ">
      <configurations>
        <configuration key="attach">*</configuration>
        <configuration key="apply-acl">true</configuration>
      </configurations>
    </operation>


    <!-- Inspect the media -->
    <operation
      id="inspect"
      fail-on-error="true"
      exception-handler-workflow="error"
      description="Inspecting audio and video streams">
      <configurations>
        <configuration key="overwrite">false</configuration>
        <configuration key="accept-no-media">false</configuration>
      </configurations>
    </operation>

    <!-- Tag everything for archival -->
    <operation
      id="tag"
      description="Tagging source material for archival">
      <configurations>
        <configuration key="source-flavors">*/*</configuration>
        <configuration key="target-tags">+archive</configuration>
      </configurations>
    </operation>

    <!-- Archive -->
    <operation
        id="snapshot"
        description="Archive raw recording after ingest">
      <configurations>
        <configuration key="source-tags">archive</configuration>
      </configurations>
    </operation>

  </operations>

</definition>
